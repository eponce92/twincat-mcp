{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-tcautomation",
      "type": "shell",
      "command": "dotnet",
      "args": ["build", "-c", "Debug"],
      "options": {
        "cwd": "${workspaceFolder}/TcAutomation"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-tcautomation",
      "type": "shell",
      "command": "dotnet",
      "args": ["publish", "-c", "Release", "-r", "win-x64", "--self-contained", "false", "-o", "publish"],
      "options": {
        "cwd": "${workspaceFolder}/TcAutomation"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test-mcp-inspector",
      "type": "shell",
      "command": "npx",
      "args": ["@modelcontextprotocol/inspector", "--", "python", "mcp-server/server.py"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": []
    }
  ]
}
